<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-70dp"
        android:id="@+id/FrameLayoutSplash"
        android:background="#e403270a">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/scavenger"
            android:contentDescription="@string/splash_logo"
            android:cropToPadding="true"
            android:layout_gravity="center"
            android:layout_marginTop="-57dp"
            android:tint="#fff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/splash_title"
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/textViewSplashHeader"
            android:layout_gravity="center"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="1dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/splash_title"
            android:textColor="#fff"
            android:textSize="16sp"
            android:id="@+id/textViewSplashHeader2"
            android:layout_gravity="center"
            android:layout_marginTop="-4dp" />

    </FrameLayout>

</RelativeLayout>